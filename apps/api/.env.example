# Application Configuration
APP_NAME=agentic-ai
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=info

# API Configuration
API_HOST=localhost
API_PORT=8000

# Azure Cosmos DB
# Get these values from your Azure Cosmos DB account
AZURE_COSMOSDB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
AZURE_COSMOSDB_KEY=your-cosmosdb-key
DATABASE_NAME=agentic

# OpenAI
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Azure AI Foundry
# Get connection string from your Azure AI Foundry project
FOUNDRY_PROJECT_CONNECTION_STRING=your-foundry-connection-string
FOUNDRY_DEPLOYMENT_NAME=gpt-4.1

# Azure Service Bus
# Get connection string from your Azure Service Bus namespace
AZURE_SERVICEBUS_CONNECTION_STRING=your-servicebus-connection-string

# UI Configuration
UI_URL=http://localhost:5173

# Container Names
AGENTS_CONTAINER=agents
CONTENT_CONTAINER=content
CATALOG_CONTAINER=catalog
