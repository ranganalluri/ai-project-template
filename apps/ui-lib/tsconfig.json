{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
