{
  "name": "agentic-ai",
  "version": "0.1.0",
  "description": "Agentic AI - FastAPI + React monorepo for building AI-powered applications",
  "private": true,
  "workspaces": [
    "apps/ui",
    "apps/ui-lib"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm  ui\" \"pnpm api\"",
    "ui": "pnpm --filter=@agentic/ui dev",
    "api": "uv run python -m uvicorn api.main:app --reload --host localhost --port 8000",
    "build:ui": "pnpm build:ui-lib && pnpm --filter=@agentic/ui build",
    "build:ui-lib": "pnpm --filter=@agentic/ui-lib build",
    "docker:ui": "docker build -t agentic-ui -f apps/ui/Dockerfile .",
    "docker:compose": "docker compose up --build",
    "docker:api": "docker build -t agentic-api -f apps/api/Dockerfile .",
    "docker:functions": "docker build -t agentic-functions -f apps/functions/Dockerfile .",
    "test": "pnpm test --workspace=@agentic/ui && uv run pytest",
    "lint": "pnpm lint --workspace=@agentic/ui && uv run ruff check .",
    "format": "pnpm format --workspace=@agentic/ui && uv run black .",
    "type-check": "pnpm type-check --workspace=@agentic/ui && uv run mypy apps/",
    "clean": "rimraf dist/ build/ coverage/ .pytest_cache/ **/.next **/.venv **/node_modules **/__pycache__"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^5.0.5"
  }
}
